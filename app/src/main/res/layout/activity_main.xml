<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="@string/title"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <CheckBox
        android:id="@+id/cbCoxinha"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/coxinha"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/textViewBebidas2"
        tools:layout_editor_absoluteX="4dp" />

    <CheckBox
        android:id="@+id/cbCafe20"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/cafe25"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/textViewBebidas"
        tools:layout_editor_absoluteX="4dp" />

    <CheckBox
        android:id="@+id/cbCoca200"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/coca200"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/cbCafe200"
        tools:layout_editor_absoluteX="4dp" />

    <CheckBox
        android:id="@+id/cbCoca1"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/coca1l"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/cbCoca200"
        tools:layout_editor_absoluteX="4dp" />

    <CheckBox
        android:id="@+id/cbDoguinho"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/doguinho"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/cbPaodeQueijo"
        tools:layout_editor_absoluteX="4dp" />

    <CheckBox
        android:id="@+id/cbCafe200"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/cafe50"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/cbCafe20"
        tools:layout_editor_absoluteX="4dp" />

    <CheckBox
        android:id="@+id/cbPaodeQueijo"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/paoDeQueijo"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/cbHamburgao"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textViewBebidas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/food_label"
        android:textColor="@color/text_color_A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewBebidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/drinks_label"
        android:textColor="@color/text_color_A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbDoguinho" />

    <CheckBox
        android:id="@+id/cbHamburgao"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:buttonTint="@color/checkbox_color_default"
        android:checked="true"
        android:fontFamily="sans-serif-medium"
        android:text="@string/bigBurger"
        android:textColor="@color/text_color_B"
        android:textSize="14sp"
        android:typeface="sans"
        app:layout_constraintTop_toBottomOf="@+id/cbCoxinha"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/total_label"
        android:textColor="@color/text_color_A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="209dp" />

    <TextView
        android:id="@+id/textViewTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/total_default_value"
        android:textColor="@color/text_color_A"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>